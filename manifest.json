{
  "manifest_version": 3,
  "name": "Website Highlight Saver (React)",
  "version": "1.0.1",
  "description": "Highlight text on any page and save it locally.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}
